<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customer_create_account_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white"
    app:layoutDescription="@xml/animation_login_to_mall_view_scene"
    tools:context=".CustomerCreateAccountView">

    <TextView
        android:id="@+id/customer_create_account_activity_invalid_credentials_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/mundial_regular"
        android:gravity="center|top"
        android:inputType="text"
        android:ellipsize="none"
        android:singleLine="false"
        android:maxLines="2"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:flow_wrapMode="none"
        app:layout_constraintBottom_toTopOf="@+id/create_account_button_customer_create_account_activity"
        app:layout_constraintEnd_toEndOf="@+id/customer_create_account_activity_repeat_password_input_field"
        app:layout_constraintStart_toStartOf="@+id/customer_create_account_activity_repeat_password_input_field"
        app:layout_constraintTop_toBottomOf="@+id/customer_create_account_activity_repeat_password_input_field" />

    <ImageView
        android:id="@+id/blue_blob"
        android:layout_width="200dp"
        android:layout_height="209dp"
        android:contentDescription="@string/logo_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:textCursorDrawable="@color/dark_gray"
        android:id="@+id/customer_create_account_activity_email_input_field"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:background="@drawable/login_info_entry_box_background"
        android:ems="10"
        android:fontFamily="@font/mundial_light"
        android:gravity="start|center_vertical"
        android:hint="@string/email_entry_box_text"
        android:inputType="textEmailAddress"
        android:onClick="onClickRegister"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textColorLink="@color/dark_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/customer_create_account_activity_password_input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_blob" />

    <EditText
        android:textCursorDrawable="@color/dark_gray"
        android:id="@+id/customer_create_account_activity_password_input_field"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:background="@drawable/login_info_entry_box_background"
        android:ems="10"
        android:fontFamily="@font/mundial_light"
        android:gravity="start|center_vertical"
        android:hint="@string/password_entry_box_text"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textColorLink="@color/dark_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/create_account_button_customer_create_account_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_blob" />

    <EditText
        android:textCursorDrawable="@color/dark_gray"
        android:id="@+id/customer_create_account_activity_repeat_password_input_field"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:background="@drawable/login_info_entry_box_background"
        android:ems="10"
        android:fontFamily="@font/mundial_light"
        android:gravity="start|center_vertical"
        android:hint="@string/repeat_password_entry_box_text"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/dark_gray"
        android:textColorHint="@color/dark_gray"
        android:textColorLink="@color/dark_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/create_account_button_customer_create_account_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_create_account_activity_password_input_field" />

    <Button
        android:id="@+id/create_account_button_customer_create_account_activity"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:background="@drawable/entry_button_background"
        android:fontFamily="@font/mundial_demibold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="onClickRegister"
        android:text="@string/create_account_button_text"
        android:textAllCaps="false"
        android:textColor="@color/pure_white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue_blob"
        android:visibility="visible"
        app:layout_constraintVertical_bias="0.85" />

    <include
        android:id="@+id/include_customer_create"
        layout="@layout/animation_login_to_mall_view"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.motion.widget.MotionLayout>